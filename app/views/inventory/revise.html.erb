<h1>Add Inventory Qty</h1>

<%= form_for(@stock_history) do |f| %>
  <% if @stock.errors.any? %>

       <!-- Error Message -->
       <div id="error_explanation">
        <h2><%= pluralize(@stock.errors.count, "error") %> prohibited this product from being saved:</h2>
        <ul>
        <% @stock.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
      <!-- Error Message -->

  <% end %>
  <div class="field">
    <%= f.label :product %><br>         
    <select id="stock_history_product" name="stock_history[product]">

        <option value=""></option>

        <%= @products.each do |product| %>
          <option value="<%=product.id%>" 
            <%= product.id.to_i==params[:id].to_i ? " selected" : "" %>>
            <%= product.bike_name %> 
          </option>
        <% end %>

    </select>
  </div>

  <div class="field">
    <%= f.label :qty %><br>
    <%= f.text_field :alteration %>
  </div>
  <div class="field">
    <%= f.label :description %><br> 
    <%= f.text_field :description %>
  </div>

  <%= f.hidden_field(:type, :value => false) %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', products_path %>
