<%= javascript_include_tag "angular/controller/userController" %>

 <div ng-controller="userController">
  <h2> Add New User </h2>
  <input type="button" data-toggle="collapse" class="btn btn-info" value="New User" data-target="#addNewUser"></br></br>
  <form id="addNewUser" role="form" class="collapse form-horizontal">

     <div class="form-group">
      <label class="control-label-left col-sm-2" for="text">User Name:</label>
        <div class="col-sm-6">          
          <input type="text" class="form-control" id="userUsername"/>
        </div>
        <div class="col-sm-4">
          <span id="create_user_username_header" style="color: red;" hidden>Username </span>
          <span id="create_user_username_alert" style="color: red;"></span>
        </div>
    </div>

    <div class="form-group">
      <label class="control-label-left col-sm-2" for="text">Password:</label>
        <div class="col-sm-6">          
          <input type="password" class="form-control" id="userPassword"/>
        </div>
        <div class="col-sm-4">
          <span id="create_user_password_header" style="color: red;" hidden>Password </span>
          <span id="create_user_password_alert" style="color: red;"></span>
        </div>
    </div>
    
    <div class="form-group">
      <label class="control-label-left col-sm-2" for="text">Confirm Password:</label>
        <div class="col-sm-6">          
          <input type="password" class="form-control" id="userConfirmPassword">
        </div>
        <div class="col-sm-4">
          <span id="create_user_password_confirmation_header" style="color: red;" hidden>Password Confirmation </span>
          <span id="create_user_password_confirmation_alert" style="color: red;"></span>
        </div>
    </div>
    
    <div class="form-group">
      <label class="control-label-left col-sm-2" for="text">User Type:</label>
        <div class="col-sm-6">          
          <select id="userType" class="form-control">
           <option value="User">User</option>
           <option value="Admin">Admin</option>
         </select>
        </div>
        <div class="col-sm-4">
          <span id="create_user_user_type_header" style="color: red;" hidden>User type </span>
          <span id="create_user_user_type_alert" style="color: red;"></span>
        </div>
    </div>
    
    <div class="form-group">
      <label class="control-label-left col-sm-2" for="text"></label>
        <div class="col-sm-6">          
          <input type="submit" class="btn btn-success" name="Submit" id="submitNewUser">
        </div>
        <div class="col-sm-4">
          
        </div>
    </div>
    
  </form>
  
  <form>
  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-search"></i></div>
      <input type="text" class="form-control" placeholder="Search Everything Here" ng-model="searchUser">
    </div>      
  </div>
</form>

  <!-- table pertama -->  
  <div id="table-responsive-custom">
    <table summary="This table shows file inside database" class="table table-bordered table-hover">
      <caption class="text-center">{{title}}</caption>
      <thead>
        <tr>
          <th>
            <a ng-click="sortType = 'id'; sortReverse = !sortReverse">
            User ID <span ng-show="sortType == '' && !sortReverse" class="fa fa-caret-down"></span>
              <span ng-show="sortType == 'id' && !sortReverse" class="fa fa-caret-down"></span>
              <span ng-show="sortType == 'id' && sortReverse" class="fa fa-caret-up"></span>
            </a>
            </th>
          <th>
            <a ng-click="sortType = 'username'; sortReverse = !sortReverse">
            Username
              <span ng-show="sortType == 'username' && !sortReverse" class="fa fa-caret-down"></span>
              <span ng-show="sortType == 'username' && sortReverse" class="fa fa-caret-up"></span>
            </a>
            </th>
          <th>User Type</th>
          <th colspan="1">Actions</th>
        </tr>
      </thead>
      <tbody >
        <form>
          <tr ng-repeat="u in users | orderBy:sortType:sortReverse | filter:searchUser">
          <td class="UserID">{{u.id}}</td>
          <td class="UserUsername">{{u.username}}</td>
          <td class="UserType"> {{u.user_type}}</td>
          <td><input type="button" value="Delete" class="btn btn-danger btn-sm" class="destroyUser" data-toggle="modal" data-target="#deleteConfirm" onclick="delId = $(this).parent().parent().find('.UserID').html()"></td> 
        </tr>
      </form>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="10" class="text-center">Data retrieved from Back-end Ruby on Rails</td>
      </tr>
    </tfoot>
  </table>
</div><!--end of .table-responsive-->
</div>

<div class="modal fade" id="deleteConfirm" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Delete Data</h4>
        </div>
        <div class="modal-body">
          Are you Sure Want to Delete This User?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-danger" onclick="deleteUser()">Delete</button>
        </div>
      </div>
    </div>
  </div>
