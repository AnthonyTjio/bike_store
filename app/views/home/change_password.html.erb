<h1 style="margin-bottom:50px;">Change Password</h1>

<form role="form" class="form-horizontal">
     
     <div class="form-group">
        <label class="control-label-left col-sm-2" for="text">Old Password:</label>
        <div class="col-sm-6">
          <input type="password" class="form-control input-sm" id="changePasswordOldPassword"/>
        </div>
        <div class="col-sm-4">
          <span id="change_password_old_password_header" style="color: red;" hidden>Old Password</span>
          <span id="change_password_old_password_alert" style="color: red;"></span>
        </div>
      </div>
      
      <div class="form-group">
        <label class="control-label-left col-sm-2" for="text"> New Password:</label>
        <div class="col-sm-6">
          <input type="password" class="form-control input-md" id="changePasswordNewPassword"/>
        </div>
        <div class="col-sm-4">
          <span id="change_password_password_header" style="color: red;" hidden>New Password</span>
          <span id="change_password_password_alert" style="color: red;"></span>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label-left col-sm-2" for="text"> Confirm Password:</label>
        <div class="col-sm-6">
          <input type="password" class="form-control input-md" id="changePasswordPasswordConfirmation"/>
        </div>
        <div class="col-sm-4">
         <span id="change_password_password_confirmation_header" style="color: red;" hidden>Confirm Password </span>
         <span id="change_password_password_confirmation_alert" style="color: red;"></span>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label-left col-sm-2" for="text"> </label>
        <div class="col-sm-6">
          <input type="submit" name="Submit" class="btn btn-success"  id="submitChangePassword" onclick="changePassword()">
        </div>
        <div class="col-sm-4">
         
        </div>
      </div>
  
  </form>
