  <h2> Order List </h2>
  <form>
  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-search"></i></div>
      <input type="text" class="form-control" placeholder="Search Everything Here" ng-model="searchCustomer">
    </div>      
  </div>
</form>

  <!-- table pertama -->  
  <div id="table-responsive-custom">
    <table summary="This table shows file inside database" class="table table-bordered table-hover">
      <caption class="text-center">{{title}}</caption>
      <thead>
        <tr>
          <th>
            <a ng-click="sortType = 'id'; sortReverse = !sortReverse">
            Order ID <span ng-show="sortType == '' && !sortReverse" class="fa fa-caret-down"></span>
            <span ng-show="sortType == 'id' && !sortReverse" class="fa fa-caret-down"></span>
            <span ng-show="sortType == 'id' && sortReverse" class="fa fa-caret-up"></span>
            </a>
          </th>
          <th>
            <a ng-click="sortType = 'customer.customer_name'; sortReverse = !sortReverse">
            Customer 
            <span ng-show="sortType == 'customer.customer_name' && !sortReverse" class="fa fa-caret-down"></span>
            <span ng-show="sortType == 'customer.customer_name' && sortReverse" class="fa fa-caret-up"></span>
            </a>
          </th> 
          <th>
            Paid Status
          </th>
          <th>Shipping Status</th>
          <th>State</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody >
        <form>
          <tr ng-repeat="o in orders | orderBy:sortType:sortReverse | filter:searchCustomer " >
            <td id="CustomerID" > {{o.id}} </td>
            <td id="CustomerName" > {{o.customer.customer_name}} </td>
            <td id="ShippingAddress" > {{o.is_paid}} </td>
            <td id="ShippingMethod" > {{o.is_delivered}} </td>
            <td id="Status" > {{o.status}} </td>
          <!-- <td> <button ng-click="edit(p.productBikeID);">Edit</button> </td>
          <td > <input type="button" value="Save" class="saveBike" > </td>
          <td> <input type="button" value="Delete" class="deleteBike"> </td> -->
        </tr>
      </form>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="5" class="text-center">Data retrieved from database bike_store table bike_list</td>
      </tr>
    </tfoot>
  </table>
</div><!--end of .table-responsive-->
</div>