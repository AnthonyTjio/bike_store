<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Order date</th>
      <th>Order time</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.customer.customer_name %></td>
        <td><%= order.order_date %></td>
        <td><%= order.order_time %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'New Order item', new_order_item_path(:orderID => order.id) %></td>
        <td><%= link_to 'Paid', orders_payment_path(:id => order.id) %></td>
        <td><%= link_to 'Deliver', orders_deliver_path(:id => order.id) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

