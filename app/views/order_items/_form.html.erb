<%= form_for(@order_item) do |f| %>
  <% if @order_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order_item.errors.count, "error") %> prohibited this order_item from being saved:</h2>

      <ul>
      <% @order_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <input value="<%=@order_item.order_id%>" name="order_item[order_id]" id="order_item_order_id" type="text" hidden>
  
  <div class="field">
    <%= f.label :product_id %><br>

    <select name="order_item[product_id]" id="order_item_product_id">

      <option value="">Select Bike</option>
      <%= Product.all.each do |product| %>

      <option value="<%= product.id %>"
      <%= @order_item.product ? product.id.to_i==@order_item.product.id ? " selected" : "" : "" %>>
      <%= product.bike_name %> - <%= product.bike_size %>
      </option>

      <% end %>
    </select>
  </div>

  <div class="field">
    <%= f.label :qty %><br>
    <%= f.number_field :qty %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
